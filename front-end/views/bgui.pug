doctype html  
html 
    head 
        title BrainGenix UI 
        script(src='axios.min.js') 
        script(src='chart.js')
        script(src='/js/iconify.min.js')
        link(href='img/puzzle-brain.svg' type='image/svg+xml' rel='icon')
        link(href='css/bulma.css' rel='stylesheet')
        link(href='xterm.css' rel='stylesheet')
        link(href='css/style.css' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap' rel='stylesheet')
        script(src='xterm.js')
        script(src='xterm-addon-fit.js')
    body 
        header 
            div#header-title BrainGenix UI 
            nav 
                ul
                    li(onclick='navigate("Dashboard");') Dashboard
                    li(onclick='navigate("Terminal");') Terminal
                    li(onclick='navigate("Docs");') Docs 
            div.social-links
                a(href='https://github.com/carboncopies/BrainGenix-UI' target='blank') 
                    span.iconify(data-icon='akar-icons:github-fill')
        main
            div#Dashboard.pg.active
                div.prefade
                div.postfade
                section
                    h2 Dashboard 
                    p See stats and info:
                    div.columns#nodes-cpu-ram
                        div.stat-card#nodes.column 
                            h3 Nodes 
                            h4 
                                span Total Nodes 
                                span#total-nodes
                            ul#node-list 
                                li Loading...
                        div.stat-card#ram-usage.column
                            h3 RAM Usage 
                                span#ru-stats Loading...
                            canvas.stat  
                        div.stat-card#cpu.column
                            h3 CPU Usage
                            canvas.stat
            div#Terminal.pg
                div.prefade
                div.postfade
                section
                    h2 Terminal 
                    div#terminal
            div#Docs.pg
                div.prefade
                div.postfade
                section 
                    h2 Docs 
                    p Add docs here...
    footer 
        div.notification 
            div.close-notification
                span.iconify(data-icon='ion-close-circle-outline') 
            h2 Error 
            p API Server is not reachable.
        script(src='/js/scripts.js')